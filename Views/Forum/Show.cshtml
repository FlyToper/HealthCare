                            <li><a href="#">Separated link</a></li>
                        </ul>
                    </li>
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("登录", "Login", "Home")</li>
                    <li style="margin-left:3px;margin-right:3px;"><a href="javascript:void(0);">|</a></li>
                    <li><a href="#">注册</a></li>
                    <li class="dropdown" style="display:none">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Dropdown <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Action</a></li>
                            <li><a href="#">Another action</a></li>
                            <li><a href="#">Something else here</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="#">Separated link</a></li>
                        </ul>
                    </li>
                </ul>

            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>

    <!---->
    <div class="content_header">
        <div class="list-group">
            @*<button type="button" class="list-group-item">Cras justo odio</button>
                <button type="button" class="list-group-item">Dapibus ac facilisis in</button>
                <button type="button" class="list-group-item">Morbi leo risus</button>
                <button type="button" class="list-group-item">Porta ac consectetur ac</button>
                <button type="button" class="list-group-item">Vestibulum at eros</button>*@
            <div>
                <h3 style="margin:5px;"><span>【 <span class="glyphicon glyphicon-search" aria-hidden="true"></span> 快速搜索】</span></h3>
                <!--快速搜索选项【开始】-->
                <div style="margin-left:10px;margin-top:10px">
                    <span>
                        <input class="myButton1" type="button" value="查看所有资讯" />
                    </span>&nbsp;&nbsp;
                    <span>
                        <span>时间:</span>
                        <select>
                            <option value="0" selected="selected">请选择</option>
                            <option value="1">最近一天</option>
                            <option value="2">最近一周</option>
                            <option value="3">最近一月</option>
                            <option value="4">最近一年</option>
                            <option value="5">更久</option>
                        </select>
                        <span><input type="button" value="按时间查找" onclick="" /></span>
                    </span>&nbsp;&nbsp;

                    <span>
                        <span>发表人:</span>
                        <input type="text" data-toggle="tooltip" data-placement="top" title="><h5> <span class='myTipTitleColor'>请填写有效的发表人昵称！</span></h5>" />
                        <span><input type="button" value="按发表人查找" /> </span>
                    </span>&nbsp;&nbsp;

                    <span>
                        <span>分类:</span>
                        <input type="text" data-toggle="tooltip" data-placement="top" title="><h5> <span class='myTipTitleColor'>请填写有效的类别！</span></h5>"/>
                        <span><input type="button" value="按分类查找" /> </span>
                    </span>
                    <!--快速搜索选项【结束】-->
                </div>
            </div>
        </div>
    </div>

    <!--【头部开始】-->
    <div class="forumType_head">
        <div class="row forumType_head_group">
            <div class="col-md-4 forumType_head_item" onclick="JumpByForumType('YingyangMeishi');">
                @*<img src="~/MyContent/images/avtar.png" />*@
                @*<span class="forumType_head_item_title"> 营养美食</span>*@
                <img src="~/MyContent/images/forumType1.png" class="forumType_head_item_image" />
            </div>
            <div class="col-md-4 forumType_head_item" onclick="JumpByForumType('SushenMeiti');">
                @*<img src="~/MyContent/images/avtar.png" />
                    <span class="forumType_head_item_title">塑身美体</span>*@
                <img src="~/MyContent/images/forumType2.png" class="forumType_head_item_image" />
            </div>
            <div class="col-md-4 forumType_head_item" onclick="JumpByForumType('JiankangBaodian');">
                @*<img src="~/MyContent/images/avtar.png" />
                    <span class="forumType_head_item_title"> 健康宝典</span>*@
                <img src="~/MyContent/images/forumType3.png" class="forumType_head_item_image" />
            </div>
        </div>
        <div class="row forumType_head_group">
            <div class="col-md-4 forumType_head_item" onclick="JumpByForumType('YuerBaodian');">
                @*<img src="~/MyContent/images/avtar.png" />
                    <span class="forumType_head_item_title">育儿宝典</span>*@
                <img src="~/MyContent/images/forumType4.png" class="forumType_head_item_image" />
            </div>
            <div class="col-md-4 forumType_head_item" onclick="JumpByForumType('YuleZaping');">
                @*<img src="~/MyContent/images/avtar.png" />
                    <span class="forumType_head_item_title">娱乐杂评</span>*@
                <img src="~/MyContent/images/forumType5.png" class="forumType_head_item_image" />
            </div>
            <div class="col-md-4 forumType_head_item" onclick="JumpByForumType('NanrenNvren');">
                @*<img src="~/MyContent/images/avtar.png" />
                    <span class="forumType_head_item_title">男人女人</span>*@
                <img src="~/MyContent/images/forumType6.png" class="forumType_head_item_image" />
            </div>
        </div>
    </div>
    <script type="text/javascript">
        function JumpByForumType(forumType) {
            location.href = "/Forum/Show?forumType=" + forumType;
        }
    </script>
    <!--【头部结束】-->
    <hr />

    <!--【最新和推荐内容开始】-->
    <div class="new_recommend_content row">
        <div class="new_recommend_content_left col-md-12 col-sm-6">
            
        </div><!--【内容左边框】-->
        <!--<div class="new_recommend_content_right col-md-6 col-sm-6"></div><!--【内容右边框】-->
    </div>
    <!--【最新和推荐内容结束】-->
    <!--【页面主题内容结束】-->
