    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/MyContent/js/ForumJS.js"></script>

    <script type="text/javascript">
        $(function () {
            $('#myModal').on('shown.bs.modal', function () {
                $('#myInput').focus();
            });
        });

        function myHelpLink() {
            $(".btn-lg").click();
        }
    </script>
</body>

</html>