@{
    Layout = null;
    int k = 1;
    
}


<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link href="~/MyContent/images/ic_launcher.png" rel="shortcut icon" />

    <title>@ViewBag.ForumInfo.Title</title>

    <!-- Bootstrap -->

    <link href="~/Content/themes/base/minified/bootstrap.min.css" rel="stylesheet" />
    <link href="~/MyContent/css/mycss.css" rel="stylesheet" />
    <link href="~/MyContent/css/myIndexcss.css" rel="stylesheet" />
    <link href="~/MyContent/css/base.css" rel="stylesheet" />
    <link href="~/MyContent/css/demo.css" rel="stylesheet" />
    <link href="~/MyContent/css/default.css" rel="stylesheet" />

    <style type="text/css">
        .CurrentLocation {
            font-size: 20px;
            margin-left: 9%;
            margin-right: 10%;
            margin-top: 20px;
        }

        .Showdetail_main {
            margin-top: 20px;
            margin-left: 10%;
            margin-right: 10%;
        }

        fieldset {
            padding: 10px;
            margin: 10px;
            /*width:270px;*/
            color: #333;
            border: #CCC solid 1px;
        }

        legend {
            text-decoration: none;
            padding-left: 5px;
            padding-right: 5px;
            width: auto;
            border: none;
            /*margin-left:5px;
            margin-right:5px;*/
        }
    </style>


</head>
<body>
    <!--------------------------------------------------头部导航开始------------------------------------------------------------->
    @RenderPage("../Shared/Header.cshtml")
    <!--------------------------------------------------头部导航结束------------------------------------------------------------->
    <!--【头部开始】-->
    <div class="CurrentLocation">
        当前位置：<a href="/Forum">健康论坛</a> &gt; <a href="javascript:void(0);">@ViewBag.ForumInfo.ForumName</a>
    </div>
    <br />
    <div style="font-size:30px;margin-left:9%;margin-right:10%;">
        <!--【文章标题】-->
        <span style="background-color: #6699CC; color: white;  padding: 5px;">@ViewBag.ForumInfo.Title</span>
    </div>
    <!--【头部结束】-->

    <div class="Showdetail_main">

        <div id="Showdetail_main_all_0" class="row " style="padding:0px; border-style: solid; border-width: 1px; border-color: #A9CBEE;">
            <!--【楼主层开始】-->
            <div id="Showdetail_main_left_0" class="col-md-3" style="padding: 0px;  background-color: #eff4fb;border-right-style:solid;border-width:1px;border-color:#A9CBEE;margin:0px;padding-bottom:20px;">
                <!--【左边框开始】-->
                <div style="margin-top:20px;text-align:center;">
                    <!--【图片展示】-->
                    <img src="~/MyContent/images/avtar.png" width="150" height="150" />
                </div>
                <div style="text-align:center;margin-top:20px; font-size:20px;">
                    <!--【作者名字展示】-->
                    <a href="javascript:void(0);">@ViewBag.ForumInfo.SubName</a>
                </div>
            </div><!--【左边框结束】-->

            <div id="Showdetail_main_right_0" class="col-md-9" style="padding:0px; height:100%;margin:0px;">
                <div class="row" style="margin:0px; border-bottom-style:solid;border-width:1px;border-color:#A9CBEE;">
                    <div class="col-md-9">发表于： @ViewBag.ForumInfo.SubDate</div>
                    <div class="col-md-3" style="text-align:right;">楼主</div>
                </div>
                <div id="Showdetail_main_right_content_0" style="padding:5px;">
                    @Html.Raw(ViewBag.ForumInfo.Content)

                </div><!--【内容】-->
                <div class="row" style="margin: 0px; margin-bottom:0px; border-top-style: solid; border-width: 1px; border-color: #A9CBEE;background-color:#eff4fb ; ">
                    <div class="col-md-7">回复次数： <span id="AnwserNum">@ViewBag.ForumInfo.FloorCount</span> </div>
                    <div class="col-md-5" style="text-align:right;"><a href="javascript:void(0);" onclick="CountUsefulAndUseless(1,1,@ViewBag.ForumInfo.Id)">对我有用[<span id="usefulCount_@ViewBag.ForumInfo.Id">@ViewBag.ForumInfo.UsefulCount</span>]</a> <a href="javascript:void(0);" onclick="CountUsefulAndUseless(1,2,@ViewBag.ForumInfo.Id)">对我有用[<span id="uselessCount_@ViewBag.ForumInfo.Id">@ViewBag.ForumInfo.UselessCount</span>]</a>  举报</div>
                </div><!--【底部】-->
            </div>
        </div><!--【楼主层结束】-->
        <br />

        @foreach (var answerInfo in ViewBag.AnswerInfo)
        {

            <div id="Showdetail_main_all_@k" class="row " style="padding:0px; border-style: solid; border-width: 1px; border-color: #A9CBEE;">
                <!--【回复开始】-->
                <div id="Showdetail_main_left_@k" class="col-md-3" style="padding: 0px;  background-color: #eff4fb;border-right-style:solid;border-width:1px;border-color:#A9CBEE;margin:0px;padding-bottom:20px;">
                    <!--【左边框开始】-->
                    <div style="margin-top:20px;text-align:center;">
                        <!--【图片展示】-->
                        <img src="~/MyContent/images/avtar.png" width="150" height="150" />
                    </div>
                    <div style="text-align:center;margin-top:20px; font-size:20px;">
                        <!--【作者名字展示】-->
                        <a href="javascript:void(0);">@answerInfo.FromName</a>
                    </div>
                </div><!--【左边框结束】-->

                <div id="Showdetail_main_right_@k" class="col-md-9" style="padding:0px; height:100%;margin:0px;">
                    <div class="row" style="margin:0px; border-bottom-style:solid;border-width:1px;border-color:#A9CBEE;">
                        <div class="col-md-9">发表于： @answerInfo.SubDate</div>
                        <div class="col-md-3" style="text-align:right;">#@k</div>
                    </div>
                    <div id="Showdetail_main_right_content_@k" style="padding:5px;">
                       @Html.Raw(answerInfo.Content)

                    </div><!--【内容】-->
                    <div class="row" style="margin: 0px; margin-bottom:0px; border-top-style: solid; border-width: 1px; border-color: #A9CBEE;background-color:#eff4fb ; ">
                        @*<div class="col-md-7">回复次数： <span id="AnwserNum">5</span> </div>*@
                        <div class="col-md-12" style="text-align:right;"><a href="javascript:void(0);" onclick="CountUsefulAndUseless(2,1,@answerInfo.Id)">对我有用[<span id="Answer_usefulCount_@answerInfo.Id">@answerInfo.UsefulCount</span>]</a> <a href="javascript:void(0);" onclick="CountUsefulAndUseless(2,2,@answerInfo.Id)">对我有用[<span id="Answer_uselessCount_@answerInfo.Id">@answerInfo.UselessCount</span>]</a>  举报</div>
                    </div><!--【底部】-->
                </div>
            </div><!--【回复结束】-->
            <br />
            k++;
        }




        <!---------------------【回复开始】--------------------------------->
        <div class="row" style="border-style: solid; border-color: #A9CBEE;border-width:1px;">
            <div style="margin:10px;"><span style="font-weight:bold;">回复内容</span> <span style="font-size:medium;">匿名用户不能发表回复 </span><span><a href="/Home/Login">登录</a> | <a href="javascript:void(0);">注册</a> </span>  &nbsp;&nbsp;&nbsp;&nbsp;<span>引用：</span><select id="select_floornumber"><option value="0">请选择</option><option value="1">#1</option><option value="2">#2</option><option value="3">#3</option></select></div>
            @*<div style="margin:10px;">
                      <span><span  class="glyphicon glyphicon-picture" aria-hidden="true"></span> 插入图片：<input style="display:initial;" type="file" alt="插入图片" id="uploadImage" onchange="ajaxFileUpload()" name="uploadImage" /> </span>
                </div>*@
            <!--回复编辑框-->
            @*<div id="ReplyContent" style="background-color:white;border-style:solid;border-width:1px;border-color:#A9CBEE; margin:10px;margin-top:0px;padding:5px; width:70%;height:75%;resize:none;overflow:auto" contenteditable="true" ></div>*@

            @if (Session["UserName"] != null)
            {
                <input type="hidden" id="isLogin" value="y" />
            }
            else
            {
                <input type="hidden" id="isLogin" value="n" />
            }
            <div style="display:none" id="ReplyDIV">
                <textarea name="editor01" style="resize:none;" placeholder="请输入..." id="t1"></textarea>

                <div style="margin:10px;">
                    <span>
                        <img style="border-style:solid;border-width:1px;border-color:gray;border-radius:6px;" width="100" height="30" src="/Forum/CreateReplyCode" id="imgReplyCode" />
                    </span>
                    <span>
                        <input style="padding-left:5px; border-style: solid; border-width: 1px; border-color: gray; border-radius: 6px; margin-left: 10px;"  type="text" maxlength="5" size="8" id="txtReplyCode"/>
                    </span>
                    <span style="display:none;color:red" id="msgReplyCode"></span>
                    <input style="margin-left:10px;background-color:#1276bf;color:white!important;" type="button" value="提交回复" onclick="subReplyContent(@ViewData["reply_id"])" />
                </div>
            </div>

            @*<input type="button" value="测试引用" onclick="CheckTest()"/>*@
        </div>
        <!---------------------【回复结束】--------------------------------->
        @*<div id="CheckTest" class="row" style=" margin-top:10px; border-style:solid;border-width:1px;border-color:#A9CBEE;">

            </div>*@

    </div>
    <!--【页面主题内容结束】-->
    <!-------------------------------------body内容结束-------------------------------------------------->
    <!-------------------------------------底部内容开始-------------------------------------------------->
    @RenderPage("../Shared/Footer.cshtml")
    <!-------------------------------------底部内容结束-------------------------------------------------->



    <script src="~/MyContent/js/jquery-1.11.2.min.js"></script>
    @*<script src="~/Scripts/jquery-1.8.2.min.js"></script>*@
    <script src="~/MyContent/js/jquery-2.1.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="../MyContent/js/ajaxfileupload.js"></script>
    <script src="~/MyContent/js/ForumDetailJS.js"></script>
    <script type="text/javascript" src="~/MyContent/ckeditor/ckeditor.js"></script>

    <script type="text/javascript">
        $(function () {

            CKEDITOR.replace('editor01');
            $('#myModal').on('shown.bs.modal', function () {
                $('#myInput').focus();
            });
            //alert($("#Showdetail_main_all").height());
            //var h = $(".Showdetail_main_all").height();
            $("ul[class$='nav']").children().eq(2).html("<a href='javascript:void(0)' >健康论坛 <span class='sr-only'>(current)</span>").addClass("active");

            var Anwsernum = parseInt($("#AnwserNum").html());
            for (var i = 0; i <= Anwsernum; i++) {
                var h = $("#Showdetail_main_left_" + i).parent("#Showdetail_main_all_" + i).height();
                $("#Showdetail_main_left_" + i).height(parseInt(h - 20 + 10));
                $("#Showdetail_main_right_content_" + i).height(parseInt(h - 52));
            }

            //回复窗口处理
            var isLogin = $("#isLogin").val();
            if (isLogin == "y") {
                $("#ReplyDIV").show();
            } else {
                $("#ReplyDIV").hide();
            }
        });

        function myHelpLink() {
            $(".btn-lg").click();
        }





        $("#select_floornumber").bind("change", function () {
            $("#ReplyContent").append(" [quote=引用 4 楼 Novolee 的回复:]<br>CCBRSA.RSASig就是CCBRSA.dll这个dll提供的吧。好像只能windows下用？问问建行有没有linux环境的库。[/quote]");
        });

        function CheckTest() {
            var s = $("#ReplyContent").html();

            var title = s.substring(8, s.indexOf("]"));
            var content = s.substring(s.indexOf("]") + 1, s.lastIndexOf("["))

            var myfieldset = "<fieldset><legend >" + title + "</legend><blockquote>" + content + "</blockquote></fieldset>";
            $("#CheckTest").html(myfieldset);
        }

    </script>
</body>

</html>